    <!-- Efeito sonoro da caixa registradora -->
    <!--<audio id="audio" src="https://www.soundjay.com/button/beep-07.wav"></audio> -->

    <script>
        document.getElementById('valorCredito').addEventListener('change', function() {
            const valorCredito = parseFloat(this.value);
            const comissao = valorCredito * 0.004; // Comissão de 0,4%

            const resultadoComissao = document.getElementById('resultadoComissao');
            resultadoComissao.innerText = `Comissão: R$ ${comissao.toFixed(2)}`;
            
            // Adiciona a classe de animação
            resultadoComissao.classList.add('explode');
            
            // Reproduz o efeito sonoro
            // const audio = document.getElementById('audio');
            // audio.play();
            
            // Remove a classe após a animação para permitir que seja reaplicada
            setTimeout(() => {
                resultadoComissao.classList.remove('explode');
            }, 2000);
        });
    </script>
